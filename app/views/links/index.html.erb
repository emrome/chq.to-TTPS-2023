<p style="color: green"><%= notice %></p>

<h1>Links</h1>

<div id="links">
  <% @links.each do |link| %>
  <div class="card mb-3">
    <div class="card-body">
      <%= render link %>
      <p>
        <%= link_to "Show this link", link %>
      </p>
    </div>
  </div>
  <% end %>
</div>

<%= link_to "New link", new_link_path %>
