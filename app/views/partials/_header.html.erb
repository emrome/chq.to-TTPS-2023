<header>
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <a class="navbar-brand" href="<%= root_path %>" id="logo">
        <img src="<%= image_url("logo.jpeg") %>" alt="Logo" height="40">
        <span class="text-white">Chq.To</span>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "Home", root_path, class: 'nav-link ' + current_class?(root_path) %>
          </li>
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "My Links", links_path, class: 'nav-link ' + current_class?(links_path) %>
            </li>
            <li class="nav-item">
              <%= link_to "New Link", new_link_path, class: 'nav-link ' + current_class?(new_link_path) %>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link <%= current_class?(edit_user_registration_path) %> dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Account
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><%= link_to "Edit Profile", edit_user_registration_path, class: 'dropdown-item ' + current_class?(edit_user_registration_path) %></li>
                <li><%= button_to "Log out", destroy_user_session_path, method: :delete, class: 'dropdown-item' %></li>
              </ul>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Sign in", new_user_session_path, class: 'nav-link ' + current_class?(new_user_session_path) %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign up", new_user_registration_path, class: 'nav-link ' + current_class?(new_user_registration_path) %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
