<!-- app/views/reports/access_logs.html.erb -->
<%= link_to 'Back', links_path, class: 'btn btn-outline-secondary' %>

  <h1 class="mb-4 text-center">Access Logs</h1>

  <%= render 'reports/filters', link: @link %>

  <% if @access_logs.any? %>
    <%= paginate @access_logs %>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <% @access_logs.each do |log| %>
          <div class="alert alert-secondary mb-2" role="alert">
            <strong>Date:</strong> <%= log.access_date.strftime("%Y-%m-%d %H:%M") %> |
            <strong>IP Address:</strong> <%= log.ip_address %>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="alert alert-secondary mt-4" role="alert">
      No access logs found.
    </div>
  <% end %>

