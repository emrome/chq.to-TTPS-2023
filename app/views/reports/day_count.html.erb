<%= link_to 'Back', links_path, class: 'btn btn-outline-secondary' %>
<div class="container mt-5">
  <h1 class="mb-4 text-center">Access Per Week Day Count</h1>
  <%= render partial: 'reports/access_count', link: @link %>
  <% if @access_counts.any? %>
    <div class="d-flex flex-wrap">
      <% Date::DAYNAMES.each do |day| %>
        <div class="alert alert-secondary mb-2 mx-2" role="alert">
          <strong>Day:</strong> <%= day %> |
          <strong>Count:</strong> <%= @access_counts[day] %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info mt-4" role="alert">
      No access logs found.
    </div>
  <% end %>
</div>