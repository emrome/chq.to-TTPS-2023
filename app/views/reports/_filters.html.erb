<!-- app/views/reports/_filters.html.erb -->
<div class="mb-4">
  <div class="card card-body">
    <%= form_with url: access_logs_report_path(link), class:  "form-container", data: { controller: 'filter' }, method: :get do |form| %>
      <div class="form-group col-md-3">
        <%= form.label :ip_address, 'IP Address', class: 'form-label' %>
        <%= form.text_field :ip_address, value: params[:ip_address], class: 'form-control', placeholder: '127.0.0.1', pattern: '\\b(?:\\d{1,3}(?:\\.\\d{0,3}){0,3})?\\b', data: { target: 'filter.ipAddress' } %>
      </div>
      <div class="form-group col-md-3">
        <%= form.label :start_date, 'Start Date', class: 'form-label' %>
        <%= form.date_field :start_date, max: params[:end_date] , class: 'form-control', data: { target: 'filter.startDate' } %>
      </div>
      <div class="form-group col-md-3">
        <%= form.label :end_date, 'End Date', class: 'form-label' %>
        <%= form.date_field :end_date, min: params[:start_date] , class: 'form-control', data: { target: 'filter.endDate' } %>
      </div>
      <div class="form-group col-md-3 text-center mt-3">
        <%= form.submit 'Search', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
