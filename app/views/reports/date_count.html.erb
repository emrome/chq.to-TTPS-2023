<%= link_to 'Back', :back, class: 'btn btn-outline-secondary' %>
<div class="container mt-5">
  <h1 class="mb-4 text-center">Access Per Date Count</h1>
  <%= render partial: 'reports/access_count', link: @link %>
  <% if @access_counts.any? %>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <% @access_counts.each do |key, value| %>
        <div class="alert alert-secondary mb-2" role="alert">
            <strong>Date:</strong> <%= key %> |
            <strong>Count:</strong> <%= value %>
        </div>
    <% end %>
      </div>
    </div>
  <% else %>
    <div class="alert alert-info mt-4" role="alert">
      No access logs found.
    </div>
  <% end %>
</div>